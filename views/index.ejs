<!DOCTYPE html>
<html lang="en">
<head>
 <meta charset="UTF-8">
 <meta http-equiv="X-UA-Compatible" content="IE=edge">
 <meta name="viewport" content="width=device-width, initial-scale=1.0">
 <title>Document</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
  integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
 <link rel="stylesheet" href="/index.css" />
</head>
<body>
  <main class="bg-light p-5 col-9 container-fluid">
    <form action="/api/v1/products" method="get">
      <div class="row mb-1 mt-1">
        <div class="col-auto mb-1 mt-1">
          <label class="w100" for="name">Name:
            <input type="text" id="name" name="name" placeholder="chair" />
          </label>
        </div>
        <div class="col-auto mb-1 mt-1">
          <label class="w100" for="company">Company:
            <input type="text" id="company" name="company" placeholder="ikea" />
          </label>
        </div>
        <div class="col-auto mb-1 mt-1">
          <label class="w100" for="featured">Featured:
            <input type="checkbox" id="featured" name="featured" value="true" />
          </label>
        </div>
        </div>
        <div class="row mb-1 mt-1">
          <div class="col-auto mb-1 mt-1">
            <label class="w100" for="priceFrom">Price from:
              <input type="number" id="priceFrom" name="numericFilters[price>=]" min="0" />
            </label>
          </div>
          <div class="col-auto mb-1 mt-1">
            <label class="w100" for="priceTo">Price to:
              <input type="number" id="priceTo" name="numericFilters[price<=]" min="0" />
            </label>
          </div>
        </div>
        <div class="row mb-1 mt-1">
          <div class="col-auto mb-1 mt-1">
            <label class="w100" for="ratingFrom">Rating from:
              <input type="range" id="ratingFrom" name="numericFilters[rating>=]"  min="0" max="5" value="0" />
            </label>
          </div>
          <div class="col-auto mb-1 mt-1">
            <label class="w100" for="ratingTo">Rating to:
              <input type="range" id="ratingTo" name="numericFilters[rating<=]"  min="0" max="5" value="5" />
            </label>
          </div>
          <div class="col-auto mb-1 mt-1">
            <button class="btn btn-info" type="submit">Search</button>
          </div>
        </div>
    </form>
    <section class="container mt-5">
      <% products.map((product) => { %>
        <article class="product">
          <img src="<%= (product.image) ? product.image : '/defaultImg.jpg'%>" alt="<%= product.name %>" />
          <div class="product-details">
            <h3><%= product.name %></h3>
            <p>Company: <%= product.company %></p>
            <p>Rating: <%= product.rating %></p>
            <p>Price: $<%= product.price %></p>
          </div>
        </article>
      <% }) %>
    </section>
  </main>
</body>
</html>